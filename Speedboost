-- ===== SETTINGS =====
local SOUND_ID = "rbxassetid://1843521693" -- example scary/freeze sound
local SCREEN_COLOR = Color3.new(0,0,0) -- black
local SCREEN_TRANSPARENCY = 0 -- 0 = fully black

-- ===== SERVICES =====
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")
local SoundService = game:GetService("SoundService")

-- ===== CREATE BLACK SCREEN =====
local blackFrame = Instance.new("ScreenGui")
blackFrame.Name = "FreezeEffect"
blackFrame.ResetOnSpawn = false
blackFrame.Parent = PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(1,0,1,0)
frame.Position = UDim2.new(0,0,0,0)
frame.BackgroundColor3 = SCREEN_COLOR
frame.BackgroundTransparency = SCREEN_TRANSPARENCY
frame.BorderSizePixel = 0
frame.Parent = blackFrame

-- Block all input
frame.Active = true
frame.Selectable = true

-- ===== PLAY SOUND =====
local sound = Instance.new("Sound")
sound.SoundId = SOUND_ID
sound.Volume = 1
sound.Looped = true
sound.Parent = SoundService
sound:Play()
